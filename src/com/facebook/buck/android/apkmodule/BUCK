load("//tools/build_rules:java_rules.bzl", "java_immutables_library","buck_java_library")

APK_MODULE_ONLY = ["APKModule.java"]

java_immutables_library(
    name = "module-only",
    srcs = APK_MODULE_ONLY,
    tests = [
        "//test/com/facebook/buck/android/apkmodule:apkmodule",
    ],
    visibility = ["PUBLIC"],
    deps = [
        "//src/com/facebook/buck/core/util/immutables:immutables",
    ],
    exported_deps = [
        "//src/com/facebook/buck/core/rulekey:rulekey",
    ],
)

buck_java_library(
    name = "apkmodule",
    srcs = glob(["*.java"], exclude = APK_MODULE_ONLY),
    tests = [
        "//test/com/facebook/buck/android/apkmodule:apkmodule",
    ],
    visibility = ["PUBLIC"],
    deps = [
        "//src/com/facebook/buck/core/model:model",
        "//src/com/facebook/buck/core/util/graph:graph",
        "//src/com/facebook/buck/io:io",
        "//src/com/facebook/buck/io/filesystem:filesystem",
        "//src/com/facebook/buck/jvm/java/classes:classes",
        "//src/com/facebook/buck/util:util",
    ],
    exported_deps = [
        ":module-only",
        "//src/com/facebook/buck/core/model/targetgraph:targetgraph",
        "//src/com/facebook/buck/core/model/targetgraph/raw:raw",
        "//src/com/facebook/buck/core/rulekey:rulekey",
    ],
)
